<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp" >

            <Button
                android:id="@+id/mainMenu_postContainer"
                style="@style/btnStyleBeige"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:drawableBottom="@drawable/ic_action_paste"
                android:padding="20dp"
                android:text="POST CONTAINER"
                android:textSize="@dimen/containerInfo_container_details_textsize" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp" >

            <Button
                android:id="@+id/mainMenu_searchContainer"
                style="@style/btnStyleBeige"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:drawableBottom="@drawable/ic_action_search"
                android:paddingLeft="10dp"
                android:text="SEARCH CONTAINER"
                android:textSize="@dimen/containerInfo_container_details_textsize" />

        </FrameLayout>
    </LinearLayout>

